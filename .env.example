# Environment Configuration for Indeed Job Application Bot
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control!

# Load delay (seconds) - increase if you have slow internet
LOAD_DELAY=2.0

# Resume file path (REQUIRED)
RESUME_PATH=resume.pdf

# Personal Information (REQUIRED)
PHONE_NUMBER=your_phone_number_here
ADDRESS=your_full_address_here
CITY=your_city_here
POSTAL_CODE=your_postal_code_here
STATE=your_state_or_county_here

# Professional Links
GITHUB_URL=https://github.com/yourusername
LINKEDIN_URL=https://www.linkedin.com/in/yourprofile
UNIVERSITY=Your University Name

# Experience Years (0-20)
PYTHON_EXPERIENCE=5
JAVASCRIPT_EXPERIENCE=3
JAVA_EXPERIENCE=2
AWS_EXPERIENCE=1
DJANGO_EXPERIENCE=2
ANALYSIS_EXPERIENCE=3
TEACHING_EXPERIENCE=1
PROGRAMMING_EXPERIENCE=5
DEFAULT_EXPERIENCE=1

# Application Preferences
SALARY_EXPECTATION=50000
WORK_AUTHORIZED=Yes
EDUCATION_LEVEL=Bachelor
SPONSORSHIP_NEEDED=No
COMMUTE_WILLING=Yes
COMMUTE_WILLING_ALT=Yes
PREFERRED_SHIFT=Day shift
DISABILITY_STATUS=Decline to answer
DBS_CHECK=Yes
CRIMINAL_RECORD=No
VALID_CERTIFICATE=Yes
GENDER=Decline to answer
AVAILABLE_HOURS=Yes
INTERVIEW_AVAILABILITY=Flexible, weekdays preferred
DEFAULT_UNKNOWN_ANSWER=Yes